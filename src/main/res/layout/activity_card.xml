<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cwport.sentencer.CardActivity">

    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_alignParentTop="true"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/button_play"
        android:drawableLeft="@drawable/ic_action_play"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:gravity="center_horizontal|top" />
    <Button
        android:id="@+id/button_flip"
        android:drawableRight="@drawable/ic_action_rotate"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:onClick="flipCard"
        android:layout_weight="1"
        />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/panel_navigation"
        android:fadeScrollbars="false"
        android:fillViewport="true">
        <TextView
            android:id="@+id/card_text"
            android:layout_marginRight="4dp"
            android:textSize="@dimen/text_size_question"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>
    <LinearLayout
        android:id="@+id/panel_navigation"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button_prev"
            android:visibility="invisible"
            android:drawableLeft="@drawable/ic_action_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="prevCard"
            android:background="@drawable/button_border"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/button_padding"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_next"
            android:visibility="invisible"
            android:drawableRight="@drawable/ic_action_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextCard"
            android:background="@drawable/button_border"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/button_padding"
            android:layout_weight="1" />
   </LinearLayout>

</RelativeLayout>
