<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cwport.sentencer.CardActivity">

    <!--<ImageButton-->
        <!--android:id="@+id/button_play"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="48dp"-->
        <!--android:visibility="invisible"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="top|center_horizontal"-->
        <!--android:src="@drawable/ic_rotate"-->
        <!--/>-->
    <Button
        android:id="@+id/button_play"
        android:text="@string/action_play"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="invisible"
        android:layout_weight="0"
        />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/button_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/panel_navigation"
        android:fillViewport="true">
        <TextView
            android:id="@+id/card_text"
            android:textSize="@dimen/text_size_question"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>
    <RelativeLayout
        android:id="@+id/panel_navigation"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0">

        <ImageButton
            android:id="@+id/button_prev"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="prevCard"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/button_flip"
            android:src="@drawable/ic_rotate"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="flipCard"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/button_next"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextCard"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</RelativeLayout>
